@model Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="zxx">
<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Detayları</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a asp-controller="LandingPage" asp-action="Index">Anasayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Tur Detayları </li>
                </ul>
            </div>
        </div>
    </section>

    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content">
                    <img src="~/traversal/assets/images/banner2.jpg" class="radius-image img-fluid mb-5" alt="" />
                </div>
            </div>
            <div class="single-post-content">
                <p class="alphabet mb-4">
                    <span class="big-letter"></span>@Model.Description
                </p>
                <p class="mb-4">
                    @Model.LongDescription
                </p>


                <table class="table table-borderless table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tur Adresi</th>
                            <th scope="col">Süresi</th>
                            <th scope="col">Fiyatı</th>
                            <th scope="col">Kapasitesi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            
                                <th scope="row">@Model.DestinationID</th>
                                <td>@Model.City</td>
                                <td>@Model.DayNight</td>
                                <td>@Model.Price</td>
                                <td>@Model.Capacity</td>
                            
                        </tr>
                        
                    </tbody>
                </table>

                    <!--//author-card-->
                    <div class="author-card mt-5">
                        <div class="row align-items-center">
                            <div class="col-sm-3 col-6">
                                <div>
                                    <img src="assets/images/c3.jpg" alt="" class="rounded-circle img-fluid">
                                </div>
                            </div>
                            <div class="col-sm-9 mt-sm-0 mt-3">
                                <h3 class="mb-3 title">Alexander Ronald</h3>
                                <p>
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Provident, sed et excepturi.
                                    Distinctio fugit odit? Fugit ipsam. Lorem ipsum dolor sit.
                                </p>
                                <ul class="author-icons mt-4">
                                    <li>
                                        <a class="facebook" href="#url">
                                            <span class="fa fa-facebook"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="twitter" href="#url">
                                            <span class="fa fa-twitter"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="google" href="#url">
                                            <span class="fa fa-google-plus"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="linkedin" href="#url">
                                            <span class="fa fa-linkedin"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="github" href="#url">
                                            <span class="fa fa-github"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dribbble" href="#url">
                                            <span class="fa fa-dribbble"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!--//author-card-->


                    @await Component.InvokeAsync("CommentList",new {id = ViewBag.id})

                @await Component.InvokeAsync("AddComment")
                </div>
            </div>
    </section>
</body>

</html>

